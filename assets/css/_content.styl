main
  center(980px, 10px)

  #map
    margin 30px 0 0 0
    overflow hidden

  #toggle
    width 100%
    margin-bottom 20px
    cf()
    .buttons
      div
        float right
        cursor pointer
        uppercase()
        padding 0 10px
        line-height 1px
      .active
        border 1px solid bordercolor
        box-shadow 5px 6px 5px 0px rgba(250, 195, 45, 0.75)

  #filters
    cf()
    .filter-label
      column(1/9)
      @media only screen and (max-width : 700px)
        column(1/5)
      @media only screen and (max-width : 480px)
        stack(0, center)
      line-height 57px
      uppercase()
      font-size 96%
    .filter
      column(2/9)
      @media only screen and (max-width : 700px)
        column(1.9/5)
      @media only screen and (max-width : 480px)
        stack(0, center)

      select
        width 80%

  #links
    cf()
    font-size 63%
    margin 15px 0
    border-top  2px solid bordercolor
    border-bottom  2px solid bordercolor

    .pin-icon
      column(1/9)
      @media only screen and (max-width : 700px)
        column(1/5)
      @media only screen and (max-width : 480px)
        stack(0, center)
      padding 7px 0

    .link
      column(2/9)
      @media only screen and (max-width : 700px)
        column(1.9/5)
      @media only screen and (max-width : 480px)
        stack(0, center)
        label
          font-size 120%
      uppercase()
      font-weight 700
      padding 20px 0

  #treatment-wrap
    margin-bottom 20px
    h2.posts-title
      uppercase()

  ul#treatments
    list-style-type none
    padding 0
    cf()
    margin 0
    li
      column(1/4,cycle: 4)
      @media only screen and (max-width : 700px)
        column(1/2, cycle: 2)
      @media only screen and (max-width : 480px)
        stack(10%, center)
      a
        &:hover
          img
            filter none
        img
          transition: all .25s ease-in-sine
          padding 4px
          border 1px solid bordercolor
          background #ffffff
          width 100%
          box-sizing border-box
          filter url("data:image/svg+xml;utf8,<svg version='1.1' xmlns='http://www.w3.org/2000/svg' height='0'><filter id='greyscale'><feColorMatrix type='matrix' values='0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0' /></filter></svg>#greyscale")
          -webkit-filter grayscale(1)

  #post-content
    text-align center
    p
      font-weight 700

#sub-header
  text-align center
  border 2px solid bordercolor
  padding 10px 0
  margin 10px 0

  .date
    font-family "Stint Ultra Condensed"
    font-size 120%

  h2.post-title
    font-family 'Open Sans', sans-serif
    font-size 200%
    margin 0

main.home, header.home
  visibility hidden

#splash
  position fixed
  width 100%
  height 100%
  background url("/img/splash.jpg") no-repeat center
  background-size cover
  z-index 99999

  #splash-logo
    center()
    text-align center
    margin-top 5px

  h1, h3
    text-transform uppercase
    center()
    text-align center
    margin-top 5px
    margin-bottom 5px

  h1.heading
    color #d0bc9b
    font-size 350%

  h3.sub-heading
    font-size 180%
    font-family 'Open Sans', sans-serif
    font-weight 100

  .view-map
    position absolute
    bottom 5%
    text-transform uppercase
    left 46%
    font-size 140%
    color #A6A6A6
    text-decoration none
    display none
    border 2px solid #A6A6A6
    padding 5px 20px
    border-radius 25px

aside
  position: fixed;
  z-index 20
  top 0
  bottom 0
  width 245px
  overflow-y auto
  font-size 3em
  background-color #e6e6e6
  left -245px

  .close
    display block
    padding 25px
    text-align right
    font-size 70%
    a
      font-family entypo

  ul
    list-style-type none
    li a:hover
      color #b8b8b8

#blog-archive
  h2
    font-size 250%
    border-bottom 3px solid bordercolor
    border-top 3px solid bordercolor
    padding 5px
    font-family 'Open Sans', sans-serif
    text-align center
    letter-spacing 5px

  ul#posts
    list-style-type none
    padding 0
    margin 20px 0
    li
      padding 0
      margin 0
      text-align center
      *
        text-align center
      .date
        font-family "Stint Ultra Condensed"
        font-size 120%
        margin-bottom 10px
      .content
        margin-bottom 30px
      h1
        margin 0 0 20px 0
        a
          color text-color
          hover-lighten(80%)
      .blogicon
        display inline-block
        &:after, &:before
          content ' '
          width 100px
          border-bottom 2px solid bordercolor
          display block
          position relative
        &:before
          left -74px
          top 22px
        &:after
          left 74px
          top -24px

